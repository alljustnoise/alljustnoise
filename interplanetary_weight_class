print("I have information for the following planets:\n")

print("   1. Venus   2. Mars    3. Jupiter")
print("   4. Saturn  5. Uranus  6. Neptune\n")

weight = 185
planet = 6

# Write an if statement below:
if planet == 1:
  print("On Venus, boxer weight is:")
  rel_weight = weight * 0.91
  print(rel_weight)
elif planet == 2:
  print("On Mars, boxer weight is:")
  rel_weight = weight * 0.38
  print(rel_weight)
elif planet == 3:
  print("On Jupiter, boxer weight is:")
  rel_weight = weight * 2.34
  print(rel_weight)
elif planet == 4:
  print("On Saturn, boxer weight is:")
  rel_weight = weight * 1.06
  print(rel_weight)
elif planet == 5:
  print("On Uranus, boxer weight is:")
  rel_weight = weight * 0.92
  print(rel_weight)
elif planet == 6:
  print("On Neptune, boxer weight is:")
  rel_weight = weight * 1.19
  print(rel_weight)
else:
  print("please enter Solar System planet")
